@model CapaEntidad.Empleado

@{
    ViewBag.Title = "Registrar Empleados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registrar Empleado</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @*<h4>Empleado</h4>*@

@model CapaEntidad.Empleado

@{
    ViewBag.Title = "ActualizarEmpleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Actualizar Empleado</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.EmpleadoID)

    <div class="mb-3">
        @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "form-label" })
        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(model => model.Apellido, htmlAttributes: new { @class = "form-label" })

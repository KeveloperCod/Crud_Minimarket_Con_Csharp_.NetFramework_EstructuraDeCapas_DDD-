            @Html.ValidationMessageFor(model => model.CargoID, "", new { @class = "text-danger" })
        </div>


        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
}

<div>
    @Html.ActionLink("Regresar", "Empleados", null, new { @class = "btn btn-secondary" })
</div>
